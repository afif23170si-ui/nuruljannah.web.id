// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==========================================
// USER & AUTHENTICATION
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(JAMAAH)
  isActive      Boolean   @default(true)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  posts      Post[]
  finances   Finance[]
  auditLogs  AuditLog[]
  accounts   Account[]
  sessions   Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  BENDAHARA
  TAKMIR
  PENGELOLA_TPA
  JAMAAH
}

// ==========================================
// CONTENT MANAGEMENT
// ==========================================

model Post {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  content     String       @db.Text
  excerpt     String?
  coverImage  String?
  status      PostStatus   @default(DRAFT)
  category    PostCategory
  authorId    String
  author      User         @relation(fields: [authorId], references: [id])
  publishedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([status, category])
  @@index([slug])
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum PostCategory {
  ARTIKEL
  BERITA
  PENGUMUMAN
  KAJIAN
  KHUTBAH
}

// Kajian Schedule
model KajianSchedule {
  id        String   @id @default(cuid())
  title     String
  speaker   String
  topic     String?
  dayOfWeek Int // 0-6 (Sunday-Saturday)
  time      String
  location  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Mosque Events (Agenda Masjid)
model MosqueEvent {
  id          String        @id @default(cuid())
  title       String
  description String?       @db.Text
  category    EventCategory
  date        DateTime?     // For one-time events
  dayOfWeek   Int?          // 0-6 (Sunday-Saturday) for recurring events
  time        String
  endTime     String?
  location    String?
  speaker     String?
  isRecurring Boolean       @default(false)
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([category, isActive])
  @@index([date])
}

enum EventCategory {
  KAJIAN_RUTIN
  PROGRAM_RUTIN
  EVENT_BESAR
  SOSIAL
  INTERNAL_DKM
}

// ==========================================
// ANNOUNCEMENTS
// ==========================================

model Announcement {
  id        String           @id @default(cuid())
  message   String
  type      AnnouncementType @default(INFO)
  isActive  Boolean          @default(true)
  priority  Int              @default(0)
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([isActive, priority])
}

enum AnnouncementType {
  INFO
  WARNING
  URGENT
}

// ==========================================
// FINANCIAL MANAGEMENT
// ==========================================

model Fund {
  id          String       @id @default(cuid())
  name        String       // "Kas Umum", "Dana Anak Yatim", dll
  type        FundType
  isRestricted Boolean     @default(true) // Jika true, tidak boleh dipindahbukukan sembarangan
  description String?      @db.Text
  isActive    Boolean      @default(true)
  
  finances    Finance[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("funds")
}

model Finance {
  id            String          @id @default(cuid())
  type          FinanceType
  category      String?         // KOTAK_AMAL, INFAQ, DONASI, ZAKAT, SEDEKAH, WAKAF, OPERASIONAL, etc.
  
  fundId        String
  fund          Fund            @relation(fields: [fundId], references: [id])
  
  amount        Decimal         @db.Decimal(15, 2)
  description   String
  date          DateTime
  donorName     String?         // Nama donatur (opsional)
  paymentMethod String?         // CASH, TRANSFER, QRIS, EWALLET
  isAnonymous   Boolean         @default(false)
  createdBy     String
  creator       User            @relation(fields: [createdBy], references: [id])
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([type, date])
  @@index([fundId])
  @@index([category])
}

enum FinanceType {
  INCOME
  EXPENSE
}

enum FundType {
  OPERASIONAL
  SOSIAL
  ZAKAT
  WAKAF
  QURBAN
  PEMBANGUNAN
  LAINNYA
}

// ==========================================
// AUDIT TRAIL
// ==========================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String
  tableName String
  recordId  String?
  oldValue  Json?
  newValue  Json?
  timestamp DateTime @default(now())

  @@index([userId, timestamp])
  @@index([tableName, recordId])
}

// ==========================================
// TPA/TPQ MODULE
// ==========================================

model TpaTeacher {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  bio       String?  @db.Text
  photo     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classes   TpaClass[]
}

model TpaStudent {
  id          String        @id @default(cuid())
  name        String
  birthDate   DateTime?
  parentName  String?
  parentPhone String?
  address     String?
  
  classId     String?
  class       TpaClass?     @relation(fields: [classId], references: [id])
  
  status      StudentStatus @default(ACTIVE)
  enrolledAt  DateTime      @default(now())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  attendances TpaAttendance[]

  @@index([classId])
  @@index([status])
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
}

model TpaAttendance {
  id        String           @id @default(cuid())
  studentId String
  student   TpaStudent       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  date      DateTime         @db.Date
  status    AttendanceStatus
  notes     String?
  createdAt DateTime         @default(now())

  @@unique([studentId, date])
  @@index([date])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  EXCUSED
  LATE
}

model TpaAnnouncement {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  isActive    Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TpaClass {
  id          String      @id @default(cuid())
  name        String      @unique
  description String?
  schedule    String?
  
  teacherId   String?
  teacher     TpaTeacher? @relation(fields: [teacherId], references: [id])
  
  students    TpaStudent[]
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([teacherId])
}

// ==========================================
// MOSQUE PROFILE
// ==========================================

// MosqueProfile model removed â€” merged into SiteSettings

model DkmMember {
  id        String   @id @default(cuid())
  name      String
  position  String
  section   String   @default("BPH")
  photo     String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  period    String?

  @@map("dkm_members")
}

// ==========================================
// PRAYER TIMES SETTINGS
// ==========================================

model PrayerTimeSetting {
  id              String   @id @default(cuid())
  method          Int      @default(20) // Calculation method (20 = KEMENAG)
  latitude        Float
  longitude       Float
  timezone        String   @default("Asia/Jakarta")
  
  // myQuran API city code (Kemenag)
  cityCode        String   @default("93db85ed909c13838ff95ccfa94cebd9") // KOTA DUMAI
  cityName        String   @default("KOTA DUMAI")
  
  // Iqamah offsets (in minutes after adzan)
  fajrOffset      Int      @default(10)
  dhuhrOffset     Int      @default(5)
  asrOffset       Int      @default(5)
  maghribOffset   Int      @default(5)
  ishaOffset      Int      @default(10)
  
  updatedAt       DateTime @updatedAt
  
  @@map("prayer_time_settings")
}

// ==========================================
// DAILY PRAYER TIMES (Server-owned data)
// ==========================================

model DailyPrayerTime {
  id              String   @id @default(cuid())
  date            DateTime @unique @db.Date
  
  // Waktu sholat (format "HH:mm")
  imsak           String
  subuh           String
  terbit          String
  dhuha           String
  dzuhur          String
  ashar           String
  maghrib         String
  isya            String
  
  // Kalender Hijriah (dari /v3/cal/hijr)
  hijriDay        Int?
  hijriMonth      Int?
  hijriMonthName  String?
  hijriYear       Int?
  hijriDayName    String?
  hijriFullDate   String?    // e.g. "1 Ramadan 1447 H"
  
  // Metadata
  sumberApi       String   @default("myquran")
  fetchedAt       DateTime @default(now())
  
  @@map("daily_prayer_times")
}

model PrayerOfficer {
  id          String   @id @default(cuid())
  name        String
  phone       String?
  role        OfficerRole
  isActive    Boolean  @default(true)
  notes       String?
  
  schedules   OfficerSchedule[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("prayer_officers")
}

model OfficerSchedule {
  id          String   @id @default(cuid())
  officerId   String
  officer     PrayerOfficer @relation(fields: [officerId], references: [id], onDelete: Cascade)
  
  dayOfWeek   Int      // 1=Senin, 2=Selasa, ..., 7=Minggu
  prayer      PrayerTime
  role        OfficerRole
  
  notes       String?
  
  @@unique([dayOfWeek, prayer, role])
  @@map("officer_schedules")
}

model Khutbah {
  id          String   @id @default(cuid())
  date        DateTime @db.Date
  khatib      String
  muadzin     String?
  title       String
  theme       String?
  summary     String?  @db.Text
  audioUrl    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("khutbah")
}

enum OfficerRole {
  IMAM
  MUADZIN
}

enum PrayerTime {
  FAJR
  DHUHR
  ASR
  MAGHRIB
  ISHA
  JUMAT
}

// ==========================================
// SITE SETTINGS
// ==========================================

model SiteSettings {
  id              String   @id @default(cuid())
  
  // Profile
  mosqueName      String
  tagline         String?
  description     String?  @db.Text
  address         String?  @db.Text
  village         String?
  district        String?
  city            String?
  province        String?
  postalCode      String?
  
  // Contact
  phone           String?
  email           String?
  whatsapp        String?
  
  // Social Media
  facebook        String?
  instagram       String?
  twitter         String?
  youtube         String?
  
  // Banking
  bankAccounts    Json?    // [{bankName, accountNumber, accountName}]
  qrisImageUrl    String?  // URL gambar QRIS
  ewallets        Json?    // [{name, number, logo}]
  
  // Contacts (Pengurus Inti)
  contacts        Json?    // [{label, phone}]
  
  // Location
  latitude        Float?
  longitude       Float?
  
  // Branding
  logoUrl         String?
  
  // Finance
  openingBalance  Decimal  @default(0) // Saldo awal sebelum pencatatan digital
  
  // History & Vision
  history         String?  @db.Text
  vision          String?  @db.Text
  mission         String?  @db.Text
  
  updatedAt       DateTime @updatedAt
  
  @@map("site_settings")
}

// ==========================================
// GALLERY & MEDIA
// ==========================================

model GalleryAlbum {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  coverImage  String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  images      GalleryImage[]
  
  @@index([slug])
}

model GalleryImage {
  id          String       @id @default(cuid())
  title       String?
  description String?
  imageUrl    String
  albumId     String
  album       GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  order       Int          @default(0)
  createdAt   DateTime     @default(now())
  
  @@index([albumId])
}
