// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==========================================
// USER & AUTHENTICATION
// ==========================================

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(JAMAAH)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  posts      Post[]
  finances   Finance[]
  auditLogs  AuditLog[]
  accounts   Account[]
  sessions   Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  ADMIN
  BENDAHARA
  TAKMIR
  PENGELOLA_TPA
  JAMAAH
}

// ==========================================
// CONTENT MANAGEMENT
// ==========================================

model Post {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  content     String       @db.Text
  excerpt     String?
  coverImage  String?
  status      PostStatus   @default(DRAFT)
  category    PostCategory
  authorId    String
  author      User         @relation(fields: [authorId], references: [id])
  publishedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([status, category])
  @@index([slug])
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum PostCategory {
  ARTIKEL
  BERITA
  PENGUMUMAN
  KAJIAN
  KHUTBAH
}

// Kajian Schedule
model KajianSchedule {
  id        String   @id @default(cuid())
  title     String
  speaker   String
  topic     String?
  dayOfWeek Int // 0-6 (Sunday-Saturday)
  time      String
  location  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// FINANCIAL MANAGEMENT
// ==========================================

model Finance {
  id          String          @id @default(cuid())
  type        FinanceType
  category    FinanceCategory
  amount      Decimal         @db.Decimal(15, 2)
  description String
  date        DateTime
  createdBy   String
  creator     User            @relation(fields: [createdBy], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([type, date])
  @@index([category])
}

enum FinanceType {
  INCOME
  EXPENSE
}

enum FinanceCategory {
  // Income Categories
  KOTAK_AMAL
  TRANSFER
  DONASI
  INFAQ
  ZAKAT
  // Expense Categories
  OPERASIONAL
  SOSIAL
  RENOVASI
  PENDIDIKAN
  LAINNYA
}

// ==========================================
// AUDIT TRAIL
// ==========================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String
  tableName String
  recordId  String?
  oldValue  Json?
  newValue  Json?
  timestamp DateTime @default(now())

  @@index([userId, timestamp])
  @@index([tableName, recordId])
}

// ==========================================
// TPA/TPQ MODULE
// ==========================================

model TpaTeacher {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  bio       String?  @db.Text
  photo     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classes   TpaClass[]
}

model TpaStudent {
  id          String        @id @default(cuid())
  name        String
  birthDate   DateTime?
  parentName  String?
  parentPhone String?
  address     String?
  
  classId     String?
  class       TpaClass?     @relation(fields: [classId], references: [id])
  
  status      StudentStatus @default(ACTIVE)
  enrolledAt  DateTime      @default(now())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  attendances TpaAttendance[]

  @@index([classId])
  @@index([status])
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
}

model TpaAttendance {
  id        String           @id @default(cuid())
  studentId String
  student   TpaStudent       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  date      DateTime         @db.Date
  status    AttendanceStatus
  notes     String?
  createdAt DateTime         @default(now())

  @@unique([studentId, date])
  @@index([date])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  EXCUSED
  LATE
}

model TpaAnnouncement {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  isActive    Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TpaClass {
  id          String      @id @default(cuid())
  name        String      @unique
  description String?
  schedule    String?
  
  teacherId   String?
  teacher     TpaTeacher? @relation(fields: [teacherId], references: [id])
  
  students    TpaStudent[]
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([teacherId])
}

// ==========================================
// MOSQUE PROFILE
// ==========================================

model MosqueProfile {
  id          String   @id @default(cuid())
  name        String
  address     String
  phone       String?
  email       String?
  description String?  @db.Text
  vision      String?  @db.Text
  mission     String?  @db.Text
  history     String?  @db.Text
  latitude    Float?
  longitude   Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DkmMember {
  id        String   @id @default(cuid())
  name      String
  position  String
  photo     String?
  phone     String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  period    String? // e.g., "2024-2027"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order])
}

// ==========================================
// PRAYER TIMES SETTINGS
// ==========================================

model PrayerTimeSetting {
  id             String   @id @default(cuid())
  method         Int      @default(20) // Calculation method (20 = KEMENAG)
  latitude       Float
  longitude      Float
  timezone       String   @default("Asia/Jakarta")
  iqamahOffsets  Json? // {"fajr": 10, "dhuhr": 10, ...}
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// ==========================================
// SITE SETTINGS
// ==========================================

model SiteSettings {
  id              String   @id @default(cuid())
  
  // Mosque Profile
  mosqueName      String   @default("Masjid Nurul Jannah")
  mosqueAddress   String?
  mosqueCity      String?
  mosqueProvince  String?
  mosquePostcode  String?
  mosqueDescription String? @db.Text
  mosqueLogo      String?
  mosqueImage     String?
  
  // Contact Info
  phone           String?
  whatsapp        String?
  email           String?
  
  // Social Media
  facebook        String?
  instagram       String?
  youtube         String?
  tiktok          String?
  
  // Bank Accounts (JSON array)
  bankAccounts    Json?    // [{bankName, accountNumber, accountName}]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ==========================================
// GALLERY & MEDIA
// ==========================================

model GalleryAlbum {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?
  coverImage  String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  images      GalleryImage[]
  
  @@index([slug])
}

model GalleryImage {
  id          String       @id @default(cuid())
  title       String?
  description String?
  imageUrl    String
  albumId     String
  album       GalleryAlbum @relation(fields: [albumId], references: [id], onDelete: Cascade)
  order       Int          @default(0)
  createdAt   DateTime     @default(now())
  
  @@index([albumId])
}
